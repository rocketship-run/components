---
interface Props {
  for: string;
  class?: string;
}

const { for: labelFor, class: customClass = "" } = Astro.props;
---

<label for={labelFor} class={`label ${customClass}`}>
  <slot />
</label>

<style>
  .label {
    display: inline-block;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--foreground));
  }
</style>